@import "variables"

body
  position relative

  nav
    font-family "sans", sans-serif
    width 520px
    min-height 100vh
    height 100%
    padding 90px
    background $blue
    box-sizing border-box
    position fixed
    top 0
    bottom 0
    z-index 5
    width 400px
    padding 50px

    *
      color $bronze

    ul
      list-style-type none
      padding 0
      margin 0
      text-transform uppercase

      &.links
        margin-top 90px

        li
          a
            letter-spacing 4px
            line-height 2.5

            &.active ~ .dropdown
              height 74px

          .dropdown
            padding-left 15px
            overflow hidden
            height 0

        li button
          background transparent
          border none
          font-size .8rem
          line-height 2.5
          font-family inherit
          text-transform inherit

    a
      text-decoration none

    section.nav-footer
      position absolute
      bottom 40px
      font-family "serif", serif

      &.overlapped
        position initial

      .contact-info
        display inline-block
        border-bottom 1px solid $bronze
        margin-bottom 20px
        margin-top 60px
        padding-bottom 10px

        p
          font-size 1.2rem
          font-size 1em
          letter-spacing 1.8px

          &:last-of-type
            letter-spacing 1.9px

      .social-media ul
        display table
        margin auto
        float none

        li
          float left
          padding 10px

          &.sackman img
            width 120px
