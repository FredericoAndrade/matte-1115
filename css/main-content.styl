@import "variables.styl"

.main-content
  background $cream
  min-height 100vh
  font-family 'sans', sans-serif
  color $blue
  width 100%
  display inline-block

  .first-content
    min-height 100vh
    position relative
    box-sizing border-box
    padding 60px 60px 60px 580px
    padding-left 460px

  h1
    font-family 'Goldenbook-Light'
    text-transform uppercase
    text-align center
    font-size 1.5em
    letter-spacing 6px
    display inline-block
    width 100%
    margin 140px auto 50px

  .break
    display block
    margin auto

  button
    background transparent
    border 1px solid $blue
    padding 7px 30px

  .first-content button.inquiries
    float right

  button#floor-plans
    margin-right 40px

  .background-overlay
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background $cream
    opacity 0.9
    z-index 0

  .content-wrapper
    position relative
    max-width 780px
    display block
    margin auto

  .subheader
    margin 50px auto 100px
    text-align center

  .copy-text
    margin-bottom 50px

  .copy-text,
  .body-content .panel-grid .panel-grid-cell .widget_text .textwidget
    font-family 'Goldenbook-Light', serif
    text-align justify
    font-size 18px
    line-height 2
    font-weight 800

  .scroll-down-wrapper
    display inline-block
    width 100%
    position absolute
    padding-left 400px
    box-sizing border-box
    bottom 30px
    left 0

    .scroll-down
      transform rotateZ(-90deg)
      display table
      margin auto

    .scroll-down img
      display inline-block

  .banner-img
    height 100vh
    width 100%
    box-sizing border-box
    padding-left 520px
    padding-left 400px
    position relative

    h1
      color $cream
      font-size 2.5em
      box-sizing border-box
      margin 0
      padding 0 0 0 400px
      position absolute
      top 50%
      transform translateY(-50%)
      left 0
      color white
      text-shadow 0 2px 10px rgba(0,0,0,0.4)

  .body-content
    width 100%
    box-sizing border-box
    padding-left 400px

    &#body-content
      padding 150px 0 150px 400px

    > div
      > .panel-grid
        max-width 1140px
        margin auto
        padding 20px

        .panel-grid-cell
          .widget_text
            .widget-title
              text-transform uppercase

          .widget_sow-image .so-widget-sow-image
            overflow hidden
            position relative

            img
              min-height 100% !important
              min-width 100%
              max-width initial !important

        .one-col
          .panel-grid-cell
            .widget_text
              .widget-title,
              .textwidget
                text-align center

              .caption
                .textwidget
                  text-align left

                  p
                    margin 0 0 15px 0

            .widget_sow-image
              .so-widget-sow-image
                height auto

                img
                  min-height initial
                  width 100%

        .two-col
          .panel-grid-cell
            .widget_text
              .widget-title,
              .textwidget
                padding 0 3vw

              .caption
                .textwidget
                  padding 0
                  margin 0 0 15px 0

                  p
                    margin 0

            .widget_sow-image
              .vertical
               .so-widget-sow-image
                  width auto

                  img
                    height 100%
                    width auto

              .horizontal
                .so-widget-sow-image
                  height auto

                  img
                    position initial
                    transform initial
                    width 100%

              .square
                .so-widget-sow-image
                  height 0
                  padding-bottom 100%

            .widget_siteorigin-panels-builder
              .two-col
                .panel-grid
                  .panel-grid-cell
                    &:first-of-type
                      padding-right 1vw

                    &:last-of-type
                      padding-left 1vw

    button.inquiries
      font-family 'Goldenbook-Light', serif
      background $blue
      color $cream
      margin 160px auto
      text-transform uppercase
      letter-spacing 6px
      display block
      font-size 1.5em
      padding 25px 70px

      span
        border-bottom 1px solid #F8F0E8
